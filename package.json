{
  "name": "whatsapp-supabase-bot",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "start": "node --no-warnings --trace-warnings index.mjs",
    "build": "echo 'Building WhatsApp Bot...'",
    "deploy": "npm install --prefer-offline && npm start",
    "preinstall": "echo '[Render] Configurando ambiente...'",
    "postinstall": "rm -rf node_modules/@whiskeysockets && npm install --omit=dev --force --legacy-peer-deps",
    "logs": "cat /opt/render/.cache/_logs/*-debug-*.log"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "github:souravkl11/baileys#latest",
    "@supabase/supabase-js": "^2.42.3",
    "express": "^4.18.2",
    "pino": "^8.21.0",
    "qrcode": "^1.5.3",
    "dotenv": "^16.4.5",
    "pg": "^8.11.3"
  },
  "engines": {
    "node": "20.13.1",
    "npm": "10.7.0"
  },
  "volta": {
    "node": "20.13.1",
    "npm": "10.7.0"
  }
}
